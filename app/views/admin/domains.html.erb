<main class="admin p-4">
    <h1 style="font-size: xx-large;" >Domains</h1>
    <br>
    <a href="/admin/domains/review" data-turbo="false" style="text-decoration: underline;color: var(--winter-sky);">Review requests</a>
    <br><br>
    <table class="table table-auto">
        <thead>
            <tr>
                <th>Host</th>
                <th>Dash</th>
            </tr>
        </thead>
        
        <tbody>
            <% @domains.each do |d| %>
                <tr>
                    <td><%= d.host %></td>
                    <td><%= link_to "View", domain_path(d), :style => "color: var(--lemon-glacier)" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</main>