<main>
  <section role="main">
    <%= image_tag "oval.svg", size: "200" %>
    <h1>Connect a device</h1>
    <h2>
      Enter the code displayed on your device
    </h2>

    <div class="actions">
      <%= form_with url: oauth_device_approve_url, method: :get do |form| %>
        <%= form.text_field :user_code, class: 'form-control', placeholder: "Code" %>
        <%= form.submit "Connect", class: "btn btn-success btn-lg btn-block" %>
      <% end %>
    </div>
  </section>
</main>

