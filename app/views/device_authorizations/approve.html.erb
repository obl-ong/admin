<main>
  <section role="main">
    <%= image_tag "oval.svg", size: "200" %>
    <h1><%= raw t('doorkeeper.authorizations.new.title', client_name: content_tag(:strong, class: 'text-info') { @client.name }) %></h1>
    <h2>
      <%= raw t('doorkeeper.authorizations.new.prompt', client_name: content_tag(:strong, class: 'text-info') { @client.name }) %>
    </h2>

    <% if @scopes.count > 0 %>
      <div id="oauth-permissions">
        <h2><%= t('doorkeeper.authorizations.new.able_to') %>:</h2>

        <ul class="text-info">
          <% @scopes.each do |scope| %>
            <li>âœ“ <%= raw t scope, scope: [:doorkeeper, :scopes] %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="actions">
      <%= form_tag oauth_device_authorizations_authorize_url, method: :post do %>
        <%= submit_tag t('doorkeeper.authorizations.buttons.authorize'), class: "btn btn-success btn-lg btn-block" %>
      <% end %>
      <%= form_tag oauth_device_destroy_path, method: :delete do %>
        <%= submit_tag t('doorkeeper.authorizations.buttons.deny'), class: "btn btn-danger btn-lg btn-block" %>
      <% end %>
    </div>
  </section>
</main>

<%= style_tag nonce: true do %>
	main {
		padding: 5rem;
		padding-top: 4rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		min-height: 100vh;
	}

	.error {
		font-style: italic;
		color: var(--lemon-glacier);
	}

	h1 {
		font-weight: 300;
		font-size: 2.5rem;
		padding: 0;
		margin: 0;
	}

  h2 {
    font-size: 1.2rem;
  }

	div {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	a {
		color: var(--winter-sky);
	}

	a:hover {
		font-style: italic;
	}
	
	b {
		font-weight: 700; 
	}
	
	form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
		align-items: center;
		text-align: center;
	}

  strong {
    font-weight: 700;
  }

  ul {
    text-align: left;
    max-width: 500px;
  }

  li {
    padding: 0.5rem 0.25rem;
    font-size: 1.25rem;
  }

  .actions {
    display: flex;
    flex-direction: row;
  }

  .btn-danger {
    background-color: var(--bg) !important;
    border: 2px solid var(--winter-sky);
  }
<% end %>