<section>
    <%= image_tag "oval.svg", size: "200" %>
	
    <%= turbo_frame_tag "registration" do %>
		<section data-controller="webauthn" data-webauthn-options-value="<%= @options.to_json %>" data-webauthn-csrf-value="<%= session[:_csrf_token]%>">
			<h1>Create Passkey</h1>
			<p>You'll use this instead of a password to log in</p>
			<button data-action="click->webauthn#create">Create Passkey</button>
			<% if !params[:from_settings] %>
				<%= link_to "Skip without adding passkey", url_for( :skip_passkey => 'true' ) %>
			<% end %>
			<p data-webauthn-target="error" class="error"></p>
		</section>
    <% end %>
    <div>
        <p>Having trouble? <a href="mailto:support@obl.ong">support@obl.ong</a></p>
        <p><a href="https://obl.ong">What's Obl.ong?</a></p>
    </div>
</section>

<%= style_tag nonce: true do %>
	main {
		padding: 5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		min-height: 100vh;
	}

	.error {
		font-style: italic;
		color: var(--lemon-glacier);
	}

	h1 {
		font-weight: 300;
		font-size: 2.5rem;
		padding: 0;
		margin: 0;
	}

	div {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	a {
		color: var(--winter-sky);
	}

	a:hover {
		font-style: italic;
	}
	
	b {
		font-weight: 700; 
	}
	
	form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	section, turbo-frame {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
		align-items: center;
		text-align: center;
	}
<% end %>